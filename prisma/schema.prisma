generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model PreviousWork {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  images      String[] // Array of Cloudinary URLs
  category    String
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([featured])
  @@map("previous_works")
}

model Contact {
  id        String   @id @default(uuid())
  hours     String[] @default([])      // مثل: ["Mon-Fri 9–5", "Sat 10–2"]
  address   String   @default("")      // العنوان string واحد فقط
  email     String   @default("")      // contact email
  phone     String   @default("")      // رقم الهاتف
  whatsapp  String   @default("")      // واتساب
  facebook  String   @default("")      // فايسبوك
  instagram String   @default("")      // انستجرام
  twitter   String   @default("")      // تويتر (اختياري)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact")
}

